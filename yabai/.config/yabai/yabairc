sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config layout bsp
yabai -m config window_border on
yabai -m config active_window_border_color 0x504287f5
yabai -m config normal_window_border_color 0xff555555

# set mouse interaction modifier key (default: fn)
yabai -m config mouse_modifier fn

# floating windows are always on top (default: off)
yabai -m config window_topmost on

# Show shadows only for floating windows
yabai -m config window_shadow float

# Disable Yabai for this windows
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="Karabiner-Elements" manage=off
yabai -m rule --add app="Session" manage=off
yabai -m rule --add app="Alfred Preferences" manage=off
yabai -m rule --add app="Notes" manage=on
yabai -m rule --add app="Mail" manage=on

yabai -m config top_padding    10
yabai -m config bottom_padding 10
yabai -m config left_padding   10
yabai -m config right_padding  10
yabai -m config window_gap     10

# kill any existing limelight process if one exists, before we launch a new one
# killall limelight &> /dev/null
# limelight &> /dev/null &
