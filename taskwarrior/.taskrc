# Taskwarrior program configuration file.
# For more documentation, see http://taskwarrior.org or try 'man task', 'man task-color',
# 'man task-sync' or 'man taskrc'

# Use the command 'task show' to see all defaults and overrides

# Files
data.location=~/.task

# Color theme
include ~/.config/task/nord.theme

# attribute issue (number)
uda.goal.type=string
uda.goal.label=Goal

uda.taskwarrior-tui.shortcuts.1=taskopen

# add custom attributes to 'next' report
report.next.columns=id,start.age,entry.age,description.count,priority,project,goal,depends,tags,recur,scheduled.countdown,due.relative,until.remaining,urgency
report.next.labels=ID,Active,Age,Description,P,Project,Goal,Deps,Tag,Recur,S,Due,Until,Urg

report.rofi.description=Lista simples para ser usada com o Rofi
report.rofi.columns=id,description.count
report.rofi.labels=ID,Desc
report.rofi.filter=status:pending
uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING )

context.personal=-work
news.version=2.6.0
context.friday=+techfriday
context.oncall=+oncall
context.pr=+work +pr
context.work=+work -techfriday -oncall

context.rice=+rice
context.current.read=proj:RemoveLawsuit.CPF
context.current.write=proj:RemoveLawsuit.CPF
context=friday
